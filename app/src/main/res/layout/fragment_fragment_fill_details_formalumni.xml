<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="17dp">
        <ImageView
            android:id="@+id/photo1"
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:layout_gravity="center"
            android:src="@drawable/photo" />



        <Button
            android:id="@+id/camera1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/photo1"
            android:layout_alignRight="@id/photo1"
            android:background="@drawable/camera" />


        <ImageView
            android:id="@+id/name1"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:src="@drawable/ic_person_outline_black_24dp"
            android:layout_below="@id/camera1"
            android:paddingTop="20dp"/>


        <EditText
            android:id="@+id/editname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/camera1"

            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/name1"
            android:background="@drawable/customborder"
            android:ems="15"
            android:hint="@string/Name"
            android:inputType="textPersonName" />

        <ImageView
            android:id="@+id/branch1"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:src="@drawable/ic_branch_24dp"
            android:layout_below="@id/name1"
            android:paddingTop="20dp"/>

        <EditText
            android:id="@+id/editbranch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name1"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/branch1"
            android:background="@drawable/customborder"
            android:ems="15"
            android:hint="@string/Branch"
            android:inputType="textPersonName" />

        <ImageView
            android:id="@+id/contact1"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:src="@drawable/ic_contact_24dp"
            android:layout_below="@id/branch1"
            android:paddingTop="20dp"/>

        <EditText
            android:id="@+id/editcontact1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/branch1"
            android:layout_toEndOf="@id/contact1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/customborder"
            android:ems="15"
            android:hint="Mobile No:"
            android:inputType="number" />

        <ImageView
            android:id="@+id/status1"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:src="@drawable/ic_employement_24dp"
            android:layout_below="@id/contact1"
            android:paddingTop="20dp"/>
        <EditText
            android:id="@+id/editstatus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:inputType="textPersonName"
            android:hint="Employement Status"
            android:layout_marginStart="25dp"
            android:background="@drawable/customborder"
            android:layout_marginTop="20dp"
            android:layout_below="@id/contact1"
            android:layout_toEndOf="@id/dob1"/>

        <ImageView
            android:id="@+id/dob1"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:src="@drawable/ic_cake_black_24dp"
            android:layout_below="@id/status1"
            android:paddingTop="20dp"/>
        <EditText
            android:id="@+id/editdob1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:layout_marginStart="25dp"
            android:background="@drawable/customborder"
            android:inputType="date"
            android:hint="Date of Birth"
            android:layout_marginTop="20dp"
            android:layout_below="@id/status1"
            android:layout_toEndOf="@id/dob1"/>

        <ImageView
            android:id="@+id/company1"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:src="@drawable/company_20"
            android:layout_below="@id/dob1"
            android:paddingTop="20dp"/>

        <EditText
            android:id="@+id/editcompany1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:layout_marginStart="25dp"
            android:background="@drawable/customborder"
            android:inputType="textPersonName"
            android:hint="Current Company"
            android:layout_marginTop="20dp"
            android:layout_below="@id/dob1"
            android:layout_toEndOf="@id/company1"/>

        <ImageView
            android:id="@+id/linkdin1"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:src="@drawable/ic_iconmonstr_linkedin_3"
            android:layout_below="@id/company1"
            android:paddingTop="20dp"/>

        <EditText
            android:background="@drawable/customborder"
            android:id="@+id/editlinkdin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:layout_marginStart="25dp"
            android:inputType="textPersonName"
            android:hint="Linkedin Profile"
            android:layout_marginTop="20dp"
            android:layout_below="@id/company1"
            android:layout_toEndOf="@id/linkdin1"/>

        <ImageView
            android:id="@+id/website1"
            android:src="@drawable/website_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="@string/Website"
            android:textSize="24sp"
            android:layout_below="@id/linkdin1"
            android:paddingTop="20dp"/>


        <EditText
            android:id="@+id/editwebsite1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/linkdin1"
            android:layout_toEndOf="@id/website1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/customborder"
            android:ems="15"
            android:hint="Website Link"
            android:inputType="textPersonName" />

        <ImageView
            android:id="@+id/yearofpass1"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:src="@drawable/ic_graduate_24dp"
            android:layout_below="@id/website1"
            android:paddingTop="20dp"/>

        <EditText
            android:id="@+id/edityearofpass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/website1"
            android:layout_toEndOf="@id/yearofpass1"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:background="@drawable/customborder"
            android:ems="15"
            android:hint="@string/Year_of_passing"
            android:inputType="number" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="25dp"

            android:text="@string/Save"
            android:layout_below="@id/yearofpass1"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>
</ScrollView>