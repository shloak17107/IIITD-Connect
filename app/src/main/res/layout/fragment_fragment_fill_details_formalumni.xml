<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="17dp">
        <ImageView
            android:id="@+id/photo1"
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:layout_gravity="center"
            android:src="@drawable/photo" />



        <Button
            android:id="@+id/camera1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/photo1"
            android:layout_alignRight="@id/photo1"
            android:background="@drawable/camera" />

        <TextView
            android:id="@+id/name1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Name"
            android:textSize="24sp"
            android:layout_below="@id/camera1"
            android:paddingTop="20dp"/>
        <EditText
            android:id="@+id/editname1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/Type_here"
            android:layout_marginTop="10dp"
            android:layout_below="@id/camera1"
            android:layout_alignRight="@id/name1"/>

        <TextView
            android:id="@+id/branch1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Branch"
            android:textSize="24sp"
            android:layout_below="@id/name1"
            android:layout_marginTop="20dp"/>
        <EditText
            android:background="@drawable/customborder"
            android:id="@+id/editbranch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/Type_here"
            android:layout_marginTop="20dp"
            android:layout_below="@id/name1"
            android:layout_alignRight="@id/branch1"/>

        <TextView
            android:id="@+id/contact1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Conatct_no"
            android:textSize="24sp"
            android:layout_below="@id/branch1"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/editcontact1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="@string/Type_here"
            android:background="@drawable/customborder"
            android:layout_marginTop="20dp"
            android:layout_below="@id/branch1"
            android:layout_alignRight="@id/contact1"/>

        <TextView
            android:id="@+id/status1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Status"
            android:textSize="24sp"
            android:layout_below="@id/contact1"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/editstatus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/Type_here"
            android:background="@drawable/customborder"
            android:layout_marginTop="20dp"
            android:layout_below="@id/contact1"
            android:layout_alignRight="@id/dob1"/>

        <TextView
            android:id="@+id/dob1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/D_O_B"
            android:textSize="24sp"
            android:layout_below="@id/status1"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/editdob1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/customborder"
            android:inputType="date"
            android:hint="@string/Type_here"
            android:layout_marginTop="20dp"
            android:layout_below="@id/status1"
            android:layout_alignRight="@id/dob1"/>

        <TextView
            android:id="@+id/company1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Company"
            android:textSize="24sp"
            android:layout_below="@id/dob1"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/editcompany1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/customborder"
            android:inputType="textPersonName"
            android:hint="@string/Type_here"
            android:layout_marginTop="20dp"
            android:layout_below="@id/dob1"
            android:layout_alignRight="@id/company1"/>

        <TextView
            android:id="@+id/linkdin1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Linkdin"
            android:textSize="24sp"
            android:layout_below="@id/company1"
            android:layout_marginTop="20dp"/>
        <EditText
            android:background="@drawable/customborder"
            android:id="@+id/editlinkdin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/Type_here"
            android:layout_marginTop="20dp"
            android:layout_below="@id/company1"
            android:layout_alignRight="@id/linkdin1"/>

        <TextView
            android:id="@+id/website1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Website"
            android:textSize="24sp"
            android:layout_below="@id/linkdin1"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/editwebsite1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/Type_here"
            android:background="@drawable/customborder"
            android:layout_marginTop="20dp"
            android:layout_below="@id/linkdin1"
            android:layout_alignRight="@id/website1"/>



        <TextView
            android:id="@+id/yearofpass1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/Year_of_passing"
            android:textSize="24sp"
            android:layout_below="@id/website1"
            android:paddingTop="20dp"/>
        <EditText
            android:id="@+id/edityearofpass1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="@string/Type_here"
            android:background="@drawable/customborder"
            android:layout_marginTop="20dp"
            android:layout_below="@id/website1"
            android:layout_alignRight="@id/yearofpass1"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="25dp"

            android:text="@string/Save"
            android:layout_below="@id/yearofpass1"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>
</ScrollView>