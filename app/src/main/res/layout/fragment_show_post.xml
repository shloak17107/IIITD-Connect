<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ShowPost">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/owner"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="Owner_name" />

        <ImageView
            android:background="@drawable/customborder3"
            android:id="@+id/photodetails3"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_below="@+id/owner"

            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:src="@drawable/event_image"


             />

        <TextView



            android:background="@drawable/customborder2"
            android:id="@+id/post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/photodetails3"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:lineSpacingExtra="2dp"
            android:layout_marginRight="20dp"

            android:padding="2dp"
            android:textAlignment="center"

            android:text="IBM Overnight Hackathon : Sample title post"/>

        <TextView
            android:background="@drawable/customborder"
            android:id="@+id/post_description"
            android:textStyle="bold"
            android:text="Sample Description. 48 hour hackathon on Machine Learning and Data Science. Zero prerequisites required. Come and learn with us."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_title"
            android:padding="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/image1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/post_description"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/location" />

        <TextView
            android:background="@drawable/customborder"
            android:id="@+id/post_location"
            android:textColor="@color/black"
            android:text="Location"
            android:inputType="textPersonName"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_description"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="99dp"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"/>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/image1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/calendar" />

        <TextView
            android:background="@drawable/customborder"
            android:id="@+id/post_date"
            android:textColor="@color/black"
            android:text="@string/Date"
            android:inputType="date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_location"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="99dp"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            />

        <ImageView
            android:id="@+id/image3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/image2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/time" />

        <TextView
            android:background="@drawable/customborder"
            android:id="@+id/post_time"
            android:textColor="@color/black"
            android:text="Time"
            android:inputType="time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_date"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="99dp"
            android:layout_marginLeft="99dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="22dp"
            android:layout_marginRight="22dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/post_time"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:paddingBottom="20dp"
            >
        <Button
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Interested !"
            android:textColor="@color/white"
            android:layout_below="@+id/post_time"
            android:background="@drawable/uparrowpaint"

            android:id="@+id/interested"
            android:layout_marginRight="10dp"
            />
        <Button
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Remind Me !"
            android:textColor="@color/white"
            android:layout_below="@+id/post_time"
            android:layout_left="@+id/interested"
            android:background="@drawable/uparrowpaint"

            android:layout_marginLeft="10dp"
            android:id="@+id/add_to_calendar"
            />
        </LinearLayout>

    </RelativeLayout>


</ScrollView>